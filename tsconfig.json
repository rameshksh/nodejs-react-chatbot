      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,     
      "types": ["reflect-metadata", "express", "node"],      
      "moduleResolution": "node",
      "sourceMap": true,
      "target": "es5"
